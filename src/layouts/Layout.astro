---
const {
  title = 'Sur le Banc – Vernon',
  description = 'Le média 100% positif qui raconte Vernon, ses lieux, ses commerçants et ses habitants.',
  image = '/social/share-default-surbanc.jpg', // image par défaut pour le partage
} = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
     <!-- Open Graph (Facebook, LinkedIn, etc.) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Sur le Banc – Vernon" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <style is:global>
      :root {
        --color-orange: #E94E1B;
        --color-blue: #294596;
        --color-bg: #f5f5f5;
        --color-text: #294596;
        --sidebar-width: 260px;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
        overflow-x: hidden;
      }

      a {
        color: var(--color-blue);
      }

      h1,
      h2 {
        color: var(--color-orange);
      }

      .page-shell {
        min-height: 100vh;
        display: flex;
        gap: 16px;
        padding: 16px;
        align-items: stretch;
      }

      .nav-toggle {
        display: none;
      }

      .sidebar,
      .slb-panel-orange {
        width: var(--sidebar-width);
        max-width: 100%;
        flex-shrink: 0;

        padding: 16px 18px;
        display: flex;
        flex-direction: column;
        gap: 24px;
        border-radius: 20px;

        background: rgba(233, 78, 27, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.16);
        box-shadow: 0 18px 40px rgba(148, 27, 0, 0.45);
        backdrop-filter: blur(18px);
        -webkit-backdrop-filter: blur(18px);

        color: #e5e7eb;
      }

      .sidebar__brand {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 16px;
      }

      .sidebar__logo-link {
        display: inline-block;
        text-decoration: none;
      }

      .sidebar__logo-img {
        display: block;
        max-width: 100%;
        max-height: 72px;
        height: auto;
        object-fit: contain;
      }

      /* Bouton burger de fermeture DANS la sidebar (mobile only) */
      .sidebar__close-burger {
        display: none; /* masqué par défaut (desktop) */
      }

      .sidebar__section-title {
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.14em;
        color: var(--color-blue);
        margin-bottom: 8px;
        font-weight: 600;
      }

      .sidebar__menu,
      .sidebar__series {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 6px;
        font-size: 14px;
      }

      .sidebar__menu a,
      .sidebar__series a {
        text-decoration: none;
        color: #e5e7eb;
      }

      .sidebar__menu a:hover,
      .sidebar__series a:hover {
        color: #ffffff;
      }

      .sidebar__socials {
        margin-top: auto;
        font-size: 14px;
      }

      .sidebar__social-links {
        display: flex;
        gap: 8px;
        margin-top: 10px;
      }

      .sidebar__social-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 8px;
        background: #ffffff;
        border: none;
        padding: 4px;
        cursor: pointer;
        text-decoration: none;
      }

      .sidebar__social-button img {
        display: block;
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
      }

      .sidebar__social-button:hover {
        outline: 2px solid rgba(233, 78, 27, 0.7);
      }

      .main-panel {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: calc(100vh - 32px);
      }

      .topbar {
        display: none;
      }

      .topbar__inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .topbar__logo-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
      }

      .topbar__logo-img {
        display: block;
        height: 32px;
        width: auto;
        object-fit: contain;
      }

      .content {
        max-width: 1120px;
        margin: 16px auto 40px auto;
        padding: 0 16px;
        width: 100%;
        flex: 1;
      }

      .site-footer {
        border-top: 1px solid #e5e7eb;
        padding: 16px 0;
        text-align: center;
        font-size: 14px;
        color: #6b7280;
      }

      /* Bloc image carré réutilisable partout */
      .square-media {
        position: relative;
        width: 100%;
        aspect-ratio: 1 / 1;
        overflow: hidden;
      }

      .square-media img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      /* MOBILE */
      @media (max-width: 899px) {
        .page-shell {
          flex-direction: column;
          padding: 0;
          gap: 0;
        }

        .topbar {
          display: block;
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          z-index: 60;
          padding: 8px 12px;
          background: transparent;
        }

        .topbar__inner {
          padding: 8px 14px;
          border-radius: 20px;
          background: rgba(233, 78, 27, 0.9);
          border: 1px solid rgba(255, 255, 255, 0.16);
          box-shadow: 0 18px 40px rgba(148, 27, 0, 0.45);
          backdrop-filter: blur(18px);
          -webkit-backdrop-filter: blur(18px);
          color: #ffffff;
        }

        .burger {
          width: 28px;
          height: 24px;
          display: inline-flex;
          flex-direction: column;
          justify-content: space-between;
          cursor: pointer;
        }

        .burger span {
          display: block;
          height: 2px;
          border-radius: 999px;
          background: #ffffff;
        }

        /* Sidebar full screen en mobile */
        .sidebar {
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          z-index: 50;
          transform: translateX(-100%);
          transition: transform 0.25s ease;
          border-radius: 0;
          max-height: none;
          overflow-y: auto;
          padding: 16px 18px 24px 18px;
        }

        .nav-toggle:checked ~ .sidebar {
          transform: translateX(0);
        }

        .main-panel {
          min-height: 100vh;
          padding-top: 76px; /* espace pour le topbar fixe */
        }

        .content {
          margin-top: 16px;
          margin-bottom: 40px;
        }

        /* bouton de fermeture dans la sidebar, visible uniquement en mobile */
        .sidebar__close-burger {
          display: inline-flex;
          position: absolute;
          top: 10px;
          left: 10px;
          width: 26px;
          height: 22px;
          flex-direction: column;
          justify-content: space-between;
          cursor: pointer;
        }

        .sidebar__close-burger span {
          display: block;
          height: 2px;
          border-radius: 999px;
          background: #ffffff;
        }

        /* logo plus petit et bien centré */
        .sidebar__logo-img {
          max-height: 60px;
        }

        .sidebar__brand {
          justify-content: center;
          margin-top: 10px;
          margin-bottom: 20px;
        }

        /* transition par défaut de la topbar */
        .main-panel .topbar {
          transition: opacity 0.2s ease, transform 0.2s ease;
        }

        /* Quand le menu est ouvert (checkbox cochée), on masque la topbar */
        .nav-toggle:checked ~ .main-panel .topbar {
          opacity: 0;
          transform: translateY(-16px);
          pointer-events: none;
        }
      }

      /* DESKTOP */
      @media (min-width: 900px) {
        .topbar {
          display: none;
        }

        .page-shell {
          padding: 16px 24px;
        }

        .sidebar {
          position: sticky;
          top: 16px;
          height: calc(100vh - 32px);
          align-self: flex-start;
        }

        .content {
          margin-top: 16px;
        }
      }
    </style>
  </head>
  <body>
    <div class="page-shell">
      <input type="checkbox" id="nav-toggle" class="nav-toggle" />

      <aside class="sidebar">
        <div>
          <div class="sidebar__brand">
            {/* BOUTON FERMER (burger blanc) — seulement mobile via CSS */}
            <label for="nav-toggle" class="sidebar__close-burger" aria-label="Fermer le menu">
              <span></span>
              <span></span>
              <span></span>
            </label>

            <a href="/" class="sidebar__logo-link">
              <img
                src="/Logo-SLB-BLANC.png"
                alt="Sur le Banc – Vernon"
                class="sidebar__logo-img"
              />
            </a>
          </div>

          <div style="margin-top: 24px;">
            <ul class="sidebar__menu">
              <li><a href="/">Accueil</a></li>
              <li><a href="/actualites">Actualités</a></li>
              <li><a href="/contact">Contact</a></li>
              <li><a href="/a-propos">À propos</a></li>
            </ul>
          </div>

          <div style="margin-top: 24px;">
            <p class="sidebar__section-title">Séries</p>
            <ul class="sidebar__series">
              <li><a href="/au-coin-de-la-rue">Au coin de la Rue</a></li>
              <li><a href="/secrets-de-vernon">Secrets de Vernon</a></li>
              <li><a href="/on-pousse-la-porte">On pousse la porte</a></li>
              <li><a href="/vernon-talk-show">Vernon Talk-Show</a></li>
            </ul>
          </div>
        </div>

        <div class="sidebar__socials">
          <p class="sidebar__section-title">Nous suivre</p>
          <div class="sidebar__social-links">
            <a
              href="https://www.facebook.com/profile.php?id=61575273052045"
              class="sidebar__social-button"
              aria-label="Facebook"
              target="_blank"
              rel="noreferrer"
            >
              <img src="/icons/facebook-orange.png" alt="Facebook" />
            </a>
            <a
              href="https://www.instagram.com/slb_vernon/"
              class="sidebar__social-button"
              aria-label="Instagram"
              target="_blank"
              rel="noreferrer"
            >
              <img src="/icons/instagram-orange.png" alt="Instagram" />
            </a>
            <a
              href="https://www.tiktok.com/@slb_vernon"
              class="sidebar__social-button"
              aria-label="TikTok"
              target="_blank"
              rel="noreferrer"
            >
              <img src="/icons/tiktok-orange.png" alt="TikTok" />
            </a>
            <a
              href="https://www.youtube.com/@slb_vernon"
              class="sidebar__social-button"
              aria-label="YouTube"
              target="_blank"
              rel="noreferrer"
            >
              <img src="/icons/youtube-orange.png" alt="YouTube" />
            </a>
          </div>
        </div>
      </aside>

      <div class="main-panel">
        <header class="topbar">
          <div class="topbar__inner">
            <label for="nav-toggle" class="burger" aria-label="Ouvrir le menu">
              <span></span>
              <span></span>
              <span></span>
            </label>

            <a href="/" class="topbar__logo-link">
              <img
                src="/Logo-SLB-BLANC.png"
                alt="Sur le Banc – Vernon"
                class="topbar__logo-img"
              />
            </a>
          </div>
        </header>

        <main class="content">
          <slot />
        </main>

        <footer class="site-footer">
          © {new Date().getFullYear()} Sur le Banc – Vernon. Tous droits réservés.
        </footer>
      </div>
    </div>
  </body>
</html>
